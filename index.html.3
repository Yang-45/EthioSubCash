<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EthioSubCash</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            padding: 20px;
            background-color: #f9f5e3; /* Light beige background */
            color: #4a4a4a; /* Dark gray text */
        }
        h1 {
            color: #ff6f61; /* Coral accent color */
        }
        .dashboard {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin: 20px auto;
            max-width: 400px;
        }
        .reward {
            font-size: 24px;
            margin: 20px 0;
            color: #4a4a4a;
        }
        .reward span {
            color: #ff6f61; /* Coral accent color */
            font-weight: bold;
        }
        button {
            padding: 15px 30px;
            font-size: 18px;
            background-color: #ff6f61; /* Coral accent color */
            color: white;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            transition: background-color 0.3s;
            margin: 10px;
        }
        button:hover {
            background-color: #e65a50; /* Darker coral on hover */
        }
        .referral-link {
            margin: 20px 0;
            font-size: 16px;
            color: #4a4a4a;
        }
        .referral-link a {
            color: #ff6f61;
            text-decoration: none;
        }
        .leaderboard {
            margin-top: 30px;
        }
        .leaderboard h2 {
            color: #ff6f61;
        }
        .leaderboard ol {
            text-align: left;
            margin: 0 auto;
            max-width: 300px;
        }
    </style>
</head>
<body>
    <h1>Welcome to EthioSubCash!</h1>
    <div class="dashboard">
        <div class="reward">Your current rewards: <span id="rewardAmount">0</span> ETB</div>
        <button id="claimButton">Claim Rewards</button>
        <div class="referral-link">
            Your referral link: <a id="referralLink" href="#">Copy Link</a>
        </div>
        <button id="withdrawButton">Withdraw ETB</button>
    </div>
    <div class="leaderboard">
        <h2>Leaderboard</h2>
        <ol id="leaderboardList">
            <li>Loading...</li>
        </ol>
    </div>

    <script>
        // Initialize Telegram Web App API
        const tg = window.Telegram.WebApp;

        // Expand the Mini App to full screen
        tg.expand();

        // Access user data
        const user = tg.initDataUnsafe.user;
        if (user) {
            document.body.innerHTML += `<p>Hello, ${user.first_name}!</p>`;
        }

        // Reward system
        let rewards = 0; // Start with 0 rewards
        const rewardAmount = document.getElementById('rewardAmount');
        const claimButton = document.getElementById('claimButton');
        const referralLink = document.getElementById('referralLink');
        const leaderboardList = document.getElementById('leaderboardList');

        // Generate referral link
        const referralCode = `_tgr_q1eVt3ExNzNk`; // Unique referral code
        const referralUrl = `https://t.me/Acceptstarsbot?start=${referralCode}`;
        referralLink.href = referralUrl;
        referralLink.onclick = () => {
            navigator.clipboard.writeText(referralUrl);
            tg.showAlert('Referral link copied to clipboard!');
        };

        // Handle claim button click
        claimButton.addEventListener('click', () => {
            rewards += 10; // Add 10 ETB as a reward
            rewardAmount.textContent = rewards; // Update the reward display
            tg.showAlert(`You claimed 10 ETB! Total rewards: ${rewards} ETB.`);
        });

        // Handle withdraw button click
        const withdrawButton = document.getElementById('withdrawButton');
        withdrawButton.addEventListener('click', () => {
            if (rewards < 100) {
                tg.showAlert('You need at least 100 ETB to withdraw.');
            } else {
                tg.showInvoice('invoice_link', (status) => {
                    if (status === 'paid') {
                        rewards -= 100; // Deduct 100 ETB
                        rewardAmount.textContent = rewards;
                        tg.showAlert('Withdrawal successful! 100 ETB has been sent to your account.');
                    }
                });
            }
        });

        // Leaderboard data (example)
        const leaderboardData = [
            { name: 'User1', rewards: 500 },
            { name: 'User2', rewards: 400 },
            { name: 'User3', rewards: 300 },
        ];

        // Display leaderboard
        leaderboardList.innerHTML = leaderboardData
            .map((user, index) => `<li>${index + 1}. ${user.name} - ${user.rewards} ETB</li>`)
            .join('');
    </script>
</body>
</html>